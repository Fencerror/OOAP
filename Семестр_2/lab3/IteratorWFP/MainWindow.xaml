<Window x:Class="lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Survey Form" Height="600" Width="800">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
            <TextBlock Text="Опрос:" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>
            <Label x:Name="FieldLabel" Content="..." FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <StackPanel x:Name="FieldsPanel" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0,10,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="BackButton" Content="Назад" Width="150" Height="50" FontSize="16" Margin="10" Click="BackButton_Click"/>
                <Button x:Name="NextButton" Content="Дальше" Width="150" Height="50" FontSize="16" Margin="10" Click="NextButton_Click"/>
                <Button x:Name="GenerateReportButton" Content="Подтвердить" Width="200" Height="50" FontSize="16" Margin="10" Click="GenerateReportButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>